<odoo>
    <record id="view_asset_barcode_form" model="ir.ui.view">
        <field name="name">asset.barcode.form</field>
        <field name="model">asset.barcode</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="barcode"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_asset_barcode_tree" model="ir.ui.view">
        <field name="name">asset.barcode.tree</field>
        <field name="model">asset.barcode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="barcode"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_asset_barcode_root" name="Assets"/>

    <menuitem id="menu_asset_barcode" name="Asset Barcodes" parent="menu_asset_barcode_root"/>

    <act_window id="action_asset_barcode"
                name="Asset Barcodes"
                res_model="asset.barcode"
                view_mode="tree,form"
                menu_id="menu_asset_barcode"/>
</odoo>
